<meta name="og:image" content="{{url}}" />
{{#if secureUrl}}<meta name="og:image:secure_url" content="{{secureUrl}}" />{{/if}}
{{#if type}}<meta name="og:image:type" content="{{type}}" />{{/if}}
{{#if width}}<meta name="og:image:width" content="{{width}}" />{{/if}}
{{#if height}}<meta name="og:image:height" content="{{height}}" />{{/if}}
{{#if alt}}<meta name="og:image:alt" content="{{alt}}" />{{/if}}